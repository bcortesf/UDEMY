		http://www.springframework.org/schema/util https://www.springframework.org/schema/util/spring-util.xsd">

		<!-- bean definitions here -->
		<!--
			id="apodo-que-yo-quiera"
			class="ubicacion de la clase"
				property name="nombre de las variables de la clase mapeada, en la propiedad CLASS"
		-->
